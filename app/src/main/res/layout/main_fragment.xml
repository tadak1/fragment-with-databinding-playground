<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical">

        <Button
            android:id="@+id/detail_fragment_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="detail"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/detail_fragment_button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detail2"
            app:layout_constraintEnd_toEndOf="@+id/detail_fragment_button"
            app:layout_constraintStart_toStartOf="@+id/detail_fragment_button"
            app:layout_constraintTop_toBottomOf="@+id/detail_fragment_button" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>